  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Open Test",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "task",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["test.frontend"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "environment": [{ "name": "FILE", "value": "${file}" }]
    },
    {
      "name": "Run Test in opened Directory",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "task",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["test.frontend"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "environment": [{ "name": "DIR", "value": "${fileDirname}" }]
    },
    {
      "name": "Run Tests",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "task",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["test.frontend"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Run Tests in Watch mode",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "task",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["test.frontend.watch"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}

{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "noImplicitAny": false,
    "jsx": "react",
    "outDir": "./dist/",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "~/*": ["./js/*"]
    }
  },
  "exclude": ["/node_modules/**/*"],
  "include": ["./js/**/*.ts", "./js/**/*.tsx", "./js/**/*.js", "setupTests.ts"]
}
